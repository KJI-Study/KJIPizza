<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.mvckjipizza.repository.ProductRepository">

    <select id="getProductList" parameterType="hashmap" resultType="com.study.mvckjipizza.domain.CollectionsProduct">
        SELECT
            pm.id,
            pm.pdt_name,
            pm.pdt_price,
            pm.category_id,
            pm.save_name
        FROM
            pdt_mst pm
        WHERE
            pm.category_id = (select id from pdt_category_mst where category_name = #{category})

    </select>


    <select id="getOptionList" resultType="com.study.mvckjipizza.domain.Option">
        select
            om.id,
            om.option_name,
            om.option_price
        from
            option_mst om
    </select>

    <insert id="addCartList" parameterType="com.study.mvckjipizza.domain.Cart" useGeneratedKeys="true" keyProperty="id">
        insert into
            cart_mst (table_id, pdt_id, create_date, update_date)
        values(
            #{table_id},
            #{pdt_id},
            now(),
            now()
        )
    </insert>

    <insert id="addCartDtls" parameterType="list">
        insert into
            order_dtl
        values
            <foreach collection="list" item="list" separator=",">
                (
                    0,
                    #{list.cart_id},
                    #{list.option_id},
                    now(),
                    now()
                )
            </foreach>

    </insert>

    <resultMap id="CartItemsList" type="com.study.mvckjipizza.domain.Option">
        <result property="option_name" column="option_name"></result>
        <result property="option_price" column="option_price"></result>

    </resultMap>

    <resultMap id="cartListMap" type="com.study.mvckjipizza.domain.CartItems">
        <result property="table_id" column="table_id"></result>
        <result property="cart_id" column="cart_id"></result>
        <result property="pdt_name" column="pdt_name"></result>
        <result property="pdt_price" column="pdt_price"></result>
        <result property="category_id" column="category_id"></result>
        <collection property="cart_options" javaType="list" resultMap="CartItemsList"></collection>
    </resultMap>

    <select id="getCartItemsList" resultMap="cartListMap">
        SELECT
            cm.table_id,
            cm.id AS cart_id,
            pm.pdt_name,
            pm.pdt_price,
            pm.category_id,
            opm.option_name,
            opm.option_price
        FROM
            cart_mst cm
            LEFT OUTER JOIN pdt_mst pm ON(pm.id = cm.pdt_id)
            LEFT OUTER JOIN order_dtl od ON(od.cart_id = cm.id)
            LEFT OUTER JOIN option_mst opm ON(opm.id = od.option_id)
        WHERE
            cm.table_id = #{table_id}
    </select>
</mapper>
