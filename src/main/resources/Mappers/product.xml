<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.mvckjipizza.repository.ProductRepository">

    <select id="getProductList" parameterType="hashmap" resultType="com.study.mvckjipizza.domain.CollectionsProduct">
        SELECT
            pm.id,
            pm.pdt_name,
            pm.pdt_price,
            pm.category_id,
            pm.origin_name
        FROM
            pdt_mst pm
        WHERE
            pm.category_id = (select id from pdt_category_mst where category_name = #{category})

    </select>


    <select id="getOptionList" resultType="com.study.mvckjipizza.domain.Option">
        select
            om.id,
            om.option_name,
            om.option_price
        from
            option_mst om
    </select>

    <insert id="addCartList" parameterType="com.study.mvckjipizza.domain.Cart" useGeneratedKeys="true" keyProperty="cart_id">
        insert into
            cart_mst
        values(
            0,
            #{table_id},
            #{pdt_id},
            now(),
            now()
        )
    </insert>

</mapper>
